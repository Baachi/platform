{% if is_granted('oro_search') %}
    <div class="dropdown header-dropdown-search">
        <button class="dropdown-toggle" data-toggle="dropdown" title="{{'Search'|trans}}"><i class="fa-search"></i></button>
        <ul class="dropdown-menu" data-page-component-view="orosearch/js/app/views/search-suggestion-view">
            {% if isMobileVersion() %}<li class="nav-header nav-header-title">{{'Search'|trans}}</li>{% endif %}
            <li class="nav-content">
                <form method="get" action="{{ path('oro_search_results') }}" class="search-form">
                    <div class="header-search">
                        <select data-page-component-module="oro/select2-component" name="from">
                            <option value="">{{ 'All'|trans }}</option>
                            {% set searchEntities = [] %}
                            {% for className, alias in entities %}
                                {% set entityType = oro_entity_config_value(className, 'label')|trans %}
                                {% set searchEntities = searchEntities|merge({(alias) : entityType}) %}
                            {% endfor %}

                            {% for alias,name in searchEntities|sort %}
                                <option value="{{ alias }}" data-alias="{{ alias }}">{{ name }}</option>
                            {% endfor %}
                        </select>
                        <div class="search-field-container">
                            <input type="text" class="span2 search" placeholder="" name="search" value="" autocomplete="off"/>
                            <ul class="search-suggestion-list" data-role="search-suggestion-list">
                                <li class="loading" data-role="loading">
                                    <div class="loader-mask"><div class="loader-frame"></div></div>
                                </li>
                            </ul>
                            <div class="no-result-message" data-role="fallback">{{ 'oro.search.quick_search.noresults'|trans }}</div>
                        </div>
                        <button type="submit" class="btn btn-search btn-primary"><span>{{'Search'|trans}}</span></button>
                    </div>
                </form>
            </li>
        </ul>
    </div>
{% endif %}
