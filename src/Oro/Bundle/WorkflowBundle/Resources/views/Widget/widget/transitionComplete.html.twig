{% if transitionSuccess  %}
    {% set responseData = {
        trigger: [{
            eventBroker: 'widget',
            name: 'transitionSuccess',
            args: [response|json_encode]
        }],
    } %}
{% else %}
    {% set responseData = {
        trigger: [{
            eventBroker: 'widget',
            name: 'transitionFailure',
            args: [{
                status: responseCode,
                message: responseMessage
            }]
        }],
    } %}
{% endif %}

{{ responseData|json_encode|raw }}
