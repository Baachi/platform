{% extends 'OroActivityListBundle:ActivityList/js:view.html.twig' %}

{% block activityIcon %}
    <i class="{{ oro_entity_config_value(entityClass|default(), 'icon')|raw }}"></i>
{% endblock %}

{% block activityActions %}
    <% var togglerId = _.uniqueId('dropdown-') %>
    <div class="dropdown vertical-actions activity-actions">
        <a href="#" role="button" id="<%- togglerId %>" data-toggle="dropdown" class="dropdown-toggle activity-item"
           aria-haspopup="true" aria-expanded="false" aria-label="{{ 'oro.activitylist.actions.label'|trans }}">...</a>
        <ul class="dropdown-menu activity-item pull-right" role="menu" aria-labelledby="<%- togglerId %>">
            {% for action in actions|default([]) %}
                <li class="activity-action">{{ action|raw }}</li>
            {% endfor %}
            {% include 'OroActivityListBundle:ActivityList/js:workflowTemplate.html.twig' %}
        </ul>
    </div>
{% endblock %}
