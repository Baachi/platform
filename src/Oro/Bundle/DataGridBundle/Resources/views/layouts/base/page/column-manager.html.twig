{% block _commerce_column_manager_widget %}
    <script type="text/template" id="commerce-column-manager-tpl">
        <div class="column-manager">
            <div class="column-manager__title"><%= _.__('oro_frontend.column_manager.title') %></div>
            <span class="close">Ã—</span>
            <div class="column-manager__actions">
                <a href="#" data-role="column-manager-select-all"><%= _.__('oro.datagrid.column_manager.select_all')%></a>
                <span class="column-manager__separator">|</span>
                <a href="#" data-role="column-manager-unselect-all"><%= _.__('oro.datagrid.column_manager.deselect_all')%></a>
            </div>
            <div class="column-manager-table"></div>
            <div class="column-manager-reset">
                <span class="link" data-role="column-manager-reset">
                    <i class="fa fa-refresh"></i>
                    <a href="#"><%= _.__('oro.datagrid.column_manager.reset')%></a>
                </span>
            </div>
        </div>
    </script>
{% endblock %}

{% block _commerce_column_manager_item_widget %}
<script type="text/template" id="commerce-column-manager-item-tpl">
    <td class="column-manager__item">
        <div class="column-manager__container">
            <span class="column-manager__handle handle"></span>
            <label for="column-<%= cid  %>"
                   data-checkbox
                   class="custom-checkbox ">
                <input id="column-<%= cid  %>" type="checkbox" data-role="renderable"
                <% if (disabledVisibilityChange) { %> disabled <% } %>
                <% if (renderable) { %> checked <% } %>
                    class="custom-checkbox__input"
                />
                <span class="custom-checkbox__icon"></span>
                <span class="custom-checkbox__text"><%= label %></span>
            </label>

            <% if (_.isMobile()) { %>
                <span class="btn move-up" data-role="moveUp" title="Move column up"><i class="fa-chevron-up"></i></span>
                <span class="btn move-down" data-role="moveDown" title="Move column down"><i class="fa-chevron-down"></i></span>
            <% } %>
        </div>
    </td>
</script>
{% endblock %}
